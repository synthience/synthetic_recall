# HPC Configuration
NEXT_PUBLIC_ENABLE_HPC=true
NEXT_PUBLIC_HPC_POLL_INTERVAL=2000

# Memory Management
NEXT_PUBLIC_HPC_MAX_TENSORS=1000
NEXT_PUBLIC_HPC_MAX_MEMORY_MB=512

# Processing Settings
NEXT_PUBLIC_HPC_CHUNK_SIZE=256
NEXT_PUBLIC_HPC_BATCH_SIZE=32
NEXT_PUBLIC_HPC_MAX_CONCURRENT=4

# Backend Preferences
NEXT_PUBLIC_HPC_PREFER_GPU=true
NEXT_PUBLIC_HPC_FALLBACK_CPU=true

# Metrics Settings
NEXT_PUBLIC_HPC_METRICS_CACHE_TIMEOUT=5000
NEXT_PUBLIC_HPC_MAX_CACHE_ENTRIES=100

# HPC Flow Settings
NEXT_PUBLIC_HPC_SHOCK_THRESHOLD=2.0
NEXT_PUBLIC_HPC_MOMENTUM_DECAY=0.9
NEXT_PUBLIC_HPC_RANDOM_NOISE_SCALE=0.001

# Debug Settings (automatically enabled in development)
# NEXT_PUBLIC_HPC_VERBOSE_LOGGING=true
# NEXT_PUBLIC_HPC_LOG_SAMPLE_RATE=1